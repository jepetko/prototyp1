<%
   per_page = 5
   page = params[:page]
   if page.nil?
     count = contacts.count
     page = count/per_page
     if count%per_page > 0
       page+=1
     end
   end

   contacts = contacts.to_a.paginate( :page => page || 1, :per_page => 5 )
%>
<% if contacts.empty? %>
    No contacts. Edit record to add some of them.
<% else %>
    <%= render(:partial => 'contacts/contacts', :locals => {:contacts => contacts, :editable => editable} )%>
    <%= will_paginate contacts, :params => { :controller => 'contacts', :action => 'edit_all' }, renderer: BootstrapPagination::Rails %>
<% end %>
