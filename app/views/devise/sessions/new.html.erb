<div class="row-fluid">
  <div class="span4">
    <h4>Sign in with social network</h4>
    <%= render "devise/shared/signup_social" %>
  </div>
  <div class="span2">
  </div>
  <div class="span6">
    <h4>Login with registration credentials:</h4>
    <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
        <%= f.input :email, :autofocus => true %>
        <%= f.input :password %>
        <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
        <%= f.button :submit, "Sign in", :class => 'btn-primary' %>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>