<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="UTF-8">
    <title><%= content_for?(:title) ? yield(:title) : "Prototyp1" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Prototyp1" %>">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <% if params[:controller] == 'customers' %>
        <%= stylesheet_link_tag "cesium", :media => "all" %>
    <% end %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body class="<%= controller_name %> <%= action_name %>">
    <div class="navbar navbar-fixed-top">
      <nav class="navbar-inner">
        <div class="container">
          <%= render 'layouts/navigation' %>
        </div>
      </nav>
    </div>
    <div id="main" role="main">
      <div class="container <%=controller_specific_root_class params%>">
          <%= render 'layouts/messages' %>
          <%= yield %>
      </div> <!--! end of .container -->
    </div> <!--! end of #main -->
    <%= controller_specific_includes params%>
    <div style="display:none">
        <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
