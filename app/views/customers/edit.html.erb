
<div class="container-fluid">
  <div class="row-fluid">
    <div class="span5">
      <%= render 'form' %>
    </div>
    <div class="span4">
      <!-- company avatar -->
      <% if @customer.company_avatar.nil? %>
        <%= render :partial => 'company_avatars/form', :locals => { :company_avatar => CompanyAvatar.new } %>
      <% else %>
        <%= render :partial => 'company_avatars/form', :locals => { :company_avatar => @customer.company_avatar } %>
      <% end %>
      <!-- contacts -->
      <%= render :partial => 'contacts/form', :locals => { :contact => @customer.contacts.build } %>
    </div>
  </div>
</div>
<%= link_to 'Show', @customer %> |
<%= link_to 'Back', customers_path %>
