<%= simple_form_for(@customer) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :street %>
    <%= f.input :zip %>
    <%= f.input :city %>
    <%= f.input :country %>
    <%= f.hidden_field :company_avatar %>

  </div>

    <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
